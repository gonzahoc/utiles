  border-radius: 4px;
  box-sizing: border-box;
  font-size: 16px;
  color: #333;
}


/* Estilo para el botón de login */
.boton-login {
  align-items: center;
  margin-top: 20px; /* Espacio superior */
  padding: 10px 20px;
  background-color: #007bff; /* Color de fondo */
  color: #fff; /* Color de texto */
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

/* Estilo para el botón de registro */
.boton-registrar {
  align-items: center;
  margin-top: 20px; /* Espacio superior */
  padding: 10px 20px;
  background-color: #28a745; /* Color de fondo */
  color: #fff; /* Color de texto */
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

/* Cambia el color cuando pasas el cursor por encima */
.boton-login:hover, .boton-registrar:hover {
  opacity: 0.8; /* Efecto visual al hacer hover */
}